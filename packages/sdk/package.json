{
  "name": "@aimy/sdk",
  "version": "0.1.0",
  "description": "TypeScript client SDK for AIMY platform (browser + Node)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "biome format --write src",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@aimy/shared": "workspace:*",
    "@aimy/ai": "workspace:*",
    "axios": "^1.6.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@types/node": "^20.0.0"
  }
}
