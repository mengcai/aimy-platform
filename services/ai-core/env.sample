# AIMY AI Core Service Environment Configuration

# Service Configuration
SERVICE_NAME=aimy-ai-core
SERVICE_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/aimy_ai_core
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=10

# AI Model Configuration
MODEL_CACHE_TTL=3600
MODEL_UPDATE_INTERVAL=86400
DEFAULT_CONFIDENCE_THRESHOLD=0.8
MAX_PROCESSING_TIME=30000

# External API Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
COINGECKO_API_KEY=your-coingecko-api-key-here

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# File Storage
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,csv,txt

# Task Queue
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Trusted Hosts
TRUSTED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Development
RELOAD=true
LOG_LEVEL=DEBUG
