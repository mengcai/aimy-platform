{
  "name": "@aimy/contracts",
  "version": "1.0.0",
  "description": "ERC-3643 compliant security token contracts for the AIMY platform",
  "main": "index.ts",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:foundry": "forge test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "deploy:foundry": "forge script script/Deploy.s.sol --rpc-url $RPC_URL --private-key $PRIVATE_KEY --broadcast",
    "verify": "hardhat verify",
    "size": "hardhat size-contracts",
    "gas": "REPORT_GAS=true hardhat test",
    "clean": "hardhat clean && forge clean",
    "build": "npm run compile && npm run build:foundry",
    "build:foundry": "forge build",
    "install:foundry": "forge install",
    "update:foundry": "forge update",
    "remappings": "forge remappings > remappings.txt",
    "slither": "slither .",
    "slither:check": "slither-check .",
    "format": "forge fmt",
    "format:check": "forge fmt --check",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "erc-3643",
    "security-token",
    "compliance",
    "kyc",
    "aml",
    "real-world-assets",
    "rwa",
    "tokenization",
    "aimy"
  ],
  "author": "AIMY Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aimy-platform/aimy-contracts.git"
  },
  "bugs": {
    "url": "https://github.com/aimy-platform/aimy-contracts/issues"
  },
  "homepage": "https://github.com/aimy-platform/aimy-contracts#readme",
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "@openzeppelin/contracts": "^5.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.0.0",
    "chai": "^4.3.0",
    "mocha": "^10.0.0"
  },
  "peerDependencies": {
    "ethers": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "contracts/**/*.sol",
    "artifacts/**/*.json",
    "typechain-types/**/*.ts",
    "index.ts",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "forge": {
      "src": "contracts",
      "out": "out",
      "libs": ["lib"]
    }
  }
}
