{
  "name": "aimy",
  "version": "0.1.0",
  "description": "AI-Native Tokenization Infrastructure for Real-World Assets (RWA)",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "turbo format",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "contracts:test": "turbo contracts:test",
    "contracts:build": "turbo contracts:build",
    "docker:up": "docker-compose -f infra/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infra/docker-compose.yml down",
    "docker:logs": "docker-compose -f infra/docker-compose.yml logs -f",
    "seed": "tsx infra/seed.ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "turbo": "^1.12.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "eslint": "^8.57.0",
    "@biomejs/biome": "^1.5.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
