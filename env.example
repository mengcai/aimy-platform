# AIMY Platform Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aimy
DB_USER=aimy_user
DB_PASSWORD=aimy_password

# =============================================================================
# Blockchain Configuration
# =============================================================================
ETHEREUM_RPC_URL=http://localhost:8545
NETWORK_ID=1337
PLATFORM_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# AI Services Configuration
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_SERVICE_URL=http://localhost:8000

# =============================================================================
# Compliance & KYC Configuration
# =============================================================================
COMPLIANCE_API_KEY=your_compliance_api_key_here
KYC_PROVIDER=manual
SANCTIONS_CHECK_ENABLED=true
PEP_CHECK_ENABLED=true

# =============================================================================
# Proof of Reserve Configuration
# =============================================================================
REPORTS_DIR=./reports
AUDITOR=AIMY System
POR_GENERATION_TIME=09:00
POR_RETENTION_DAYS=90

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# =============================================================================
# External Service URLs
# =============================================================================
COMPLIANCE_SERVICE_URL=http://localhost:3002
SETTLEMENT_SERVICE_URL=http://localhost:3003
LIQUIDITY_SERVICE_URL=http://localhost:3004
GATEWAY_SERVICE_URL=http://localhost:3001

# =============================================================================
# Monitoring & Logging
# =============================================================================
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
LOG_RETENTION_DAYS=30

# =============================================================================
# Development Configuration
# =============================================================================
NODE_ENV=development
DEBUG=false
HOT_RELOAD=true
API_RATE_LIMIT=1000

# =============================================================================
# Email & Notifications
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
NOTIFICATION_EMAIL=notifications@aimyplatform.com

# =============================================================================
# File Storage
# =============================================================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=aimy_minio_user
MINIO_SECRET_KEY=aimy_minio_password
MINIO_BUCKET=aimy-storage
MAX_FILE_SIZE=10485760

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=aimy_redis_password
REDIS_DB=0

# =============================================================================
# Webhook Configuration
# =============================================================================
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=5000
WEBHOOK_RETRY_ATTEMPTS=3

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_AI_INSIGHTS=true
ENABLE_BLOCKCHAIN_VERIFICATION=true
ENABLE_COMPLIANCE_SCREENING=true
ENABLE_AUTOMATED_SETTLEMENT=true
ENABLE_LIQUIDITY_POOLS=true
